import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Special Purpose"
  description = "Ensure files end with newline"
}
newlines = new Config.Step {
  glob = "**/*"
  stage = "<JOB_FILES>"
  check_list_files = "hk util end-of-file-fixer {{files}}"
  fix = "hk util end-of-file-fixer --fix {{files}}"
  tests {
    ...new helpers.Fix {
      filename = "test.txt"
      before = "content"
      after = "content\n"
    }.suite
  }
}
