import "../Config.pkl"

check_executables_have_shebangs = new Config.Step {
    glob = "**/*"
    check = "hk util check-executables-have-shebangs {{files}}"
    tests {
        ["detects executable without shebang"] {
            run = "check"
            write { ["{{tmp}}/script.sh"] = "echo hello" }
            before = "chmod +x {{tmp}}/script.sh"
            files = List("{{tmp}}/script.sh")
            expect { code = 1 }
        }
        ["passes executable with shebang"] {
            run = "check"
            write { ["{{tmp}}/script.sh"] = "#!/bin/bash\necho hello" }
            before = "chmod +x {{tmp}}/script.sh"
            files = List("{{tmp}}/script.sh")
            expect { code = 0 }
        }
        ["passes non-executable file"] {
            run = "check"
            write { ["{{tmp}}/script.sh"] = "echo hello" }
            before = "chmod 644 {{tmp}}/script.sh"
            files = List("{{tmp}}/script.sh")
            expect { code = 0 }
        }
    }
}
