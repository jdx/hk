import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
  category = "Other Languages"
  description = "Swift style and conventions"
}
swiftlint = new Config.Step {
  glob = "**/*.swift"
  stage = "<JOB_FILES>"
  check = "swiftlint lint {{ files }}"
  fix = "swiftlint --fix {{ files }}"
  tests {
    local const bad = "let abc:Void\n"
    local const good = "let abc: Void\n"
    ["check bad"] {
      run = "check"
      write { ["{{tmp}}/test.swift"] = bad }
      expect { code = 1 }
    }
    ["check good"] {
      run = "check"
      write { ["{{tmp}}/test.swift"] = good }
      expect { code = 0 }
    }
    ["fix bad"] {
      run = "fix"
      write { ["{{tmp}}/test.swift"] = bad }
      expect {
        code = 0
        files { ["{{tmp}}/test.swift"] = good }
      }
    }
    ["fix good"] {
      run = "fix"
      write { ["{{tmp}}/test.swift"] = good }
      expect {
        code = 0
        files { ["{{tmp}}/test.swift"] = good }
      }
    }
  }
}
