import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Python code analysis"
}
pylint = new Config.Step {
  glob = "**/*.py"
  check = "pylint {{ files }}"
  tests {
    local const testMaker = new helpers.TestMaker {
      filename = "test.py"
    }
    ["check bad file"] = testMaker.checkFail("from __future__ import print_function", 16)
    ["check good file"] = testMaker.checkPass("'''docstring'''\nprint('hello')\n")
  }
}
