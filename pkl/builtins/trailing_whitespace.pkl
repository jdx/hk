import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
    category = "Special Purpose"
    description = "Detect and remove trailing whitespace"
}
trailing_whitespace = new Config.Step {
    glob = "**/*"
    stage = "<JOB_FILES>"
    check_list_files = "hk util trailing-whitespace {{files}}"
    fix = "hk util trailing-whitespace --fix {{files}}"
    tests {
        const local bad = "trailing  \n"
        const local good = "trailing\n"
        ["chekc bad file"] {
            run = "check"
            write { ["{{tmp}}/a.txt"] = bad }
            expect { code = 1 }
        }
        ["check good file"] {
            run = "check"
            write { ["{{tmp}}/a.txt"] = good }
            expect { code = 0 }
        }
        ["fix bad file"] {
            run = "fix"
            write { ["{{tmp}}/a.txt"] = bad }
            expect {
                code = 0
                files { ["{{tmp}}/a.txt"] = good }
            }
        }
        ["fix good file"] {
            run = "fix"
            write { ["{{tmp}}/a.txt"] = good }
            expect {
                code = 0
                files { ["{{tmp}}/a.txt"] = good }
            }
        }
    }
}
