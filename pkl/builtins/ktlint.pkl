import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Other Languages"
  description = "Kotlin linter and formatter"
}
ktlint = new Config.Step {
  glob = "**/*.kt"
  stage = "<JOB_FILES>"
  check = "ktlint {{ files }}"
  fix = "ktlint -F {{ files }}"
  tests {
    ...new helpers.Fix {
      filename = "Test.kt"
      before = "const val FOO_1  =  \"foo1\""
      after = "const val FOO_1 = \"foo1\"\n"
      mixed = new helpers.MixedFixArgs {
        before = "const val fooBar = \"FOO-BAR\""
        after = "const val fooBar = \"FOO-BAR\""
      }
    }.suite
  }
}
