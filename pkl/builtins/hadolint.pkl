import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
  category = "Infrastructure"
  description = "Dockerfile linter"
}
hadolint = new Config.Step {
  glob = "**/Dockerfile*"
  check = "hadolint {{ files }}"
  tests {
    local const bad = "FROM debian\n"
    local const good = "FROM debian:jessie\n"
    ["check bad file"] {
      run = "check"
      write { ["{{tmp}}/Dockerfile"] = bad }
      expect { code = 1 }
    }
    ["check good file"] {
      run = "check"
      write { ["{{tmp}}/Dockerfile"] = good }
      expect { code = 0 }
    }
  }
}
