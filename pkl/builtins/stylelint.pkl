import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
    category = "CSS"
    description = "CSS linter"
}
stylelint = new Config.Step {
    glob = List("**/*.css", "**/*.scss", "**/*.sass", "**/*.less")
    stage = "<JOB_FILES>"
    check = "stylelint {{ files }}"
    fix = "stylelint --fix {{ files }}"
}
