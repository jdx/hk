import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Data Formats"
  description = "TOML linter"
}
tombi = new Config.Step {
  glob = "**/*.toml"
  check = "tombi lint {{ files }}"
  tests {
    ...new helpers.Check {
      filename = "file.toml"
      bad = "[table]\nkey  =  0\nkey  =  1\n"
      good = "[table]\nkey  =  0\n"
      extra_files = new Mapping<String, String> {
        ["tombi.toml"] = "toml-version = \"v1.0.0\"\n"
      }
    }.suite
  }
}
