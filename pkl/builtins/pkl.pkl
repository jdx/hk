import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Configuration"
  description = "Pkl configuration language"
}
pkl = new Config.Step {
  glob = "**/*.pkl"
  check = "pkl eval {{files}} >/dev/null"
  tests {
    ...new helpers.Check {
      filename = "test.pkl"
      bad = "x == 1"
      good = "x = 1"
    }.suite
  }
}
