import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Validate Python syntax by parsing the AST"
}
python_check_ast = new Config.Step {
  glob = "**/*.py"
  check = "hk util python-check-ast {{files}}"
  tests {
    ...new helpers.Check {
      filename = "test.py"
      bad =
        """
          def hello(:
              print("Invalid"
        """
      good =
        """
          def hello():
              print("Hello, world!")
        """
    }.suite
    ["passes empty file"] {
      run = "check"
      write { ["{{tmp}}/empty.py"] = "" }
      expect { code = 0 }
    }
  }
}
