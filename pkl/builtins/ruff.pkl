import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Fast Python linter"
}
ruff = new Config.Step {
  glob = List("**/*.py", "**/*.pyi")
  stage = "<JOB_FILES>"
  check = "ruff check --force-exclude {{ files }}"
  check_diff = "ruff check --force-exclude --diff {{ files }}"
  fix = "ruff check --force-exclude --fix {{ files }}"
  tests {
    ...new helpers.Fix {
      filename = "test.py"
      before = "import sys\nprint('hello')\n"
      after = "print('hello')\n"
    }.suite
    local const bad = "import sys\nprint('hello')\n"
    ["check respects config exclude"] {
      run = "check"
      write {
        ["{{tmp}}/test.py"] = bad
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      expect { code = 0 }
    }
    ["fix respects config exclude"] {
      run = "fix"
      write {
        ["{{tmp}}/test.py"] = bad
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      expect {
        code = 0
        files { ["{{tmp}}/test.py"] = bad }
      }
    }
  }
}
