import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
    category = "Python"
    description = "Fast Python linter"
}
ruff = new Config.Step {
    glob = List("**/*.py", "**/*.pyi")
    stage = "<JOB_FILES>"
    check = "ruff check --force-exclude {{ files }}"
    check_diff = "ruff check --force-exclude --diff {{ files }}"
    fix = "ruff check --force-exclude --fix {{ files }}"
    tests {
        const local bad = "import sys\nprint('hello')\n"
        const local good = "print('hello')\n"
        ["check bad"] {
            run = "check"
            write { ["{{tmp}}/test.py"] = bad }
            expect { code = 1 }
        }
        ["check good"] {
            run = "check"
            write { ["{{tmp}}/test.py"] = good }
            expect { code = 0 }
        }
        ["fix bad"] {
            run = "fix"
            write { ["{{tmp}}/test.py"] = bad }
            expect {
                code = 0
                files { ["{{tmp}}/test.py"] = good }
            }
        }
        ["fix good"] {
            run = "fix"
            write { ["{{tmp}}/test.py"] = good }
            expect {
                code = 0
                files { ["{{tmp}}/test.py"] = good }
            }
        }
        ["check respects config exclude"] {
            run = "check"
            write {
                ["{{tmp}}/test.py"] = "import sys\nprint('hello')\n"
                ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
            }
            files = List("{{tmp}}/test.py")
            expect { code = 0 }
        }
        ["fix respects config exclude"] {
            run = "fix"
            write {
                ["{{tmp}}/test.py"] = "import sys\nprint('hello')\n"
                ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
            }
            files = List("{{tmp}}/test.py")
            expect {
                code = 0
                files { ["{{tmp}}/test.py"] = "import sys\nprint('hello')\n" }
            }
        }
    }
}
