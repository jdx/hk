import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Fast Python formatter (part of ruff)"
}
ruff_format = new Config.Step {
  glob = List("**/*.py", "**/*.pyi")
  stage = "<JOB_FILES>"
  check = "ruff format --force-exclude --check {{ files }}"
  check_diff = "ruff format --force-exclude --diff {{ files }}"
  fix = "ruff format --force-exclude {{ files }}"
  tests {
    local const testMaker = new helpers.TestMaker {
      filename = "test.py"
      extra_files = new Mapping<String, String> {
        ["ruff.toml"] = "exclude = [\"excluded.py\"]\n"
      }
    }
    ["check bad file"] = testMaker.checkFail("x=1+2", 1)
    ["check good file"] = testMaker.checkPass("x = 1 + 2\n")
    ["fix bad file"] = testMaker.fixPass("x=1+2", "x = 1 + 2\n")
    ["fix good file"] = testMaker.fixPass("x = 1 + 2\n", "x = 1 + 2\n")
    ["check respects config exclude"] = testMaker.withFilename("excluded.py").checkPass("x=1+2")
    ["fix respects config exclude"] =
      testMaker.withFilename("excluded.py").fixPass("x=1+2", "x=1+2")
  }
}
