import "../Config.pkl"

ruff_format = new Config.Step {
    glob = List("**/*.py", "**/*.pyi")
    stage = "<JOB_FILES>"
    check = "ruff format --check {{ files }}"
    check_list_files = """
# Parse ruff format --check output to get files that need formatting
# Output format: "Would reformat: filename"
files=$(ruff format --check {{ files }} 2>&1 | grep '^Would reformat:' | sed 's/^Would reformat: //')
if [ -n "$files" ]; then
  echo "$files"
  exit 1
fi
"""
    fix = "ruff format {{ files }}"
    tests {
        ["detects unformatted code"] {
            run = "check"
            write { ["{{tmp}}/test.py"] = "x=1+2\n" }
            files = List("{{tmp}}/test.py")
            expect { code = 1 }
        }
        ["formats code"] {
            run = "fix"
            write { ["{{tmp}}/test.py"] = "x=1+2\n" }
            files = List("{{tmp}}/test.py")
            expect {
                code = 0
                files { ["{{tmp}}/test.py"] = "x = 1 + 2\n" }
            }
        }
        ["passes formatted code"] {
            run = "check"
            write { ["{{tmp}}/test.py"] = "x = 1 + 2\n" }
            files = List("{{tmp}}/test.py")
            expect { code = 0 }
        }
    }
}
