import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Python"
  description = "Fast Python formatter (part of ruff)"
}
ruff_format = new Config.Step {
  glob = List("**/*.py", "**/*.pyi")
  stage = "<JOB_FILES>"
  check = "ruff format --force-exclude --check {{ files }}"
  check_diff = "ruff format --force-exclude --diff {{ files }}"
  fix = "ruff format --force-exclude {{ files }}"
  tests {
    ...new helpers.Fix {
      filename = "test.py"
      before = "x=1+2"
      after = "x = 1 + 2\n"
    }.suite
    local const bad = "x=1+2"
    ["check respects config exclude"] {
      run = "check"
      write {
        ["{{tmp}}/test.py"] = bad
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      expect { code = 0 }
    }
    ["fix respects config exclude"] {
      run = "fix"
      write {
        ["{{tmp}}/test.py"] = bad
        ["{{tmp}}/ruff.toml"] = "exclude = [\"test.py\"]\n"
      }
      expect {
        code = 0
        files { ["{{tmp}}/test.py"] = bad }
      }
    }
  }
}
