import "../Config.pkl"

shfmt = new Config.Step {
    batch = true
    glob = List("**/*.sh", "**/*.bash", "**/*.mksh", "**/*.bats", "**/*.zsh")
    stage = glob
    check_diff = "shfmt -d {{ files }}"
    check_list_files = """
files=$(shfmt -l {{ files }})
if [ -n "$files" ]; then
  echo "$files"
  exit 1
fi
"""
    fix = "shfmt -w {{ files }}"
}
