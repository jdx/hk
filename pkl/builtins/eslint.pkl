import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
  category = "JavaScript/TypeScript"
  description = "Pluggable JavaScript linter"
}
eslint = new Config.Step {
  glob = List("**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx")
  stage = "<JOB_FILES>"
  batch = true
  check = "eslint {{ files }}"
  fix = "eslint --fix {{ files }}"
}
