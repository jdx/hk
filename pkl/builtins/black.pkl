import "../Builtins.pkl"
import "../Config.pkl"

@Builtins.meta {
    category = "Python"
    description = "Opinionated Python formatter"
}
black = new Config.Step {
    glob = List("**/*.py")
    stage = "<JOB_FILES>"
    check = "black --check {{ files }}"
    check_diff = "black --diff {{ files }}"
    fix = "black {{ files }}"
}
