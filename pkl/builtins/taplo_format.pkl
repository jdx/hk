import "../Builtins.pkl"
import "../Config.pkl"
import "./test/helpers.pkl"

@Builtins.meta {
  category = "Data Formats"
  description = "TOML formatter"
}
taplo_format = new Config.Step {
  glob = "**/*.toml"
  stage = "<JOB_FILES>"
  check = "taplo format --check {{ files }}"
  check_diff = "taplo format --check --diff {{ files }}"
  fix = "taplo format {{ files }}"
  tests {
    ...new helpers.Fix {
      filename = "test.toml"
      before = "[table]\nkey  =  \"value\"\n"
      after = "[table]\nkey = \"value\"\n"
    }.suite
  }
}
